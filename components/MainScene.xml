<!-- main node which handles the screen -->
<component name="MainScene" extends="Scene">

  <children>
    <!-- search form -->
    <TextEditBox
      id="SearchBox"
      translation="[100,10]"
      width="600"
      height="40"
      hintText="Searchâ€¦"
      focusedColor="0xFFFFFFFF"
      textColor="0x888888"/>
    <Button
      id="SearchButton"
      translation="[720,10]"
      width="120"
      height="40"
      text="Search"
      focusedTextColor="0xFFFFFFFF"
      textColor="0x888888"/>
    <Button
      id="EpisodeButton"
      translation="[720,60]"
      width="120"
      height="40"
      text="Load Episodes"
      focusedTextColor="0xFFFFFFFF"
      textColor="0x888888"/>
    <Button
      id="HostsButton"
      translation="[860,60]"
      width="120"
      height="40"
      text="Load Hosts"
      focusedTextColor="0xFFFFFFFF"
      textColor="0x888888"/>
    <ActivityIndicator
      id="Spinner"
      translation="[860,10]"
      width="40"
      height="40"
      visible="false"/>
    <SearchTask id="SearchTaskNode" />
    <EpisodeTask id="EpisodeTaskNode" />
    <HostTask id="HostTaskNode" />

    <Poster
      id="Poster"
      translation="[750,80]"
      width="342"
      height="513"
      visible="false"/>

    <Label
      id="HostMessage"
      translation="[100,600]"
      width="600"
      height="40"
      visible="false"/>

    <Timer
      id="HostMessageTimer"
      repeat="false"
      duration="2"/>

    <Label
      id="StatusLabel"
      translation="[100,650]"
      width="600"
      height="40"
      visible="false"/>

    <!-- video -->
    <Video
      id="Video"
      visible="true"
      width="1920"
      height="1080"
      translation="[0,0]"
      focusBitmapUri="pkg:/images/mm-icon-focus-hd.jpg"/>

    <!-- menu -->
    <LabelList
      id="MenuList"
      translation="[100,80]"
      itemSize="[600,100]"
      visible="false"
      focusBitmapUri="pkg:/images/mm-icon-side-hd.jpg">
      <ContentNode id="menucontent" role="content" />
    </LabelList>
    <LabelList
      id="HostList"
      translation="[100,300]"
      itemSize="[400,40]"
      visible="false">
      <ContentNode id="hostcontent" role="content" />
    </LabelList>
  </children>

  <!-- main handler -->
  <script type="text/brightscript" uri="pkg:/components/MainScene.brs"/>
</component>
